                            </form>
                            <a href=""></a>
                            <button>ğŸ–Šï¸</button>
                        <% } %>
                    <% } %>
                </div> 
            <% }) %>
        </div>
        <form action="/comment/<%=pokemon.name%>/add-comment" method="post">
            <label for="content">Add comment:</label>
            <textarea name="content" id="comment-input"></textarea>
            <button type="submit">Post</button>
        </form>
    </section>
